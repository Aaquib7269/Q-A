<p id="notice"><%= notice %></p>

<div class="container">

	


<h3>
  
  <%= @question.question_title %>
</h3><br>
<hr>


<br>

	<h1 style="color:#ccc">Answers</h1>
	 <% @answers.each do |answer| %>
      <br>
      <p><%= answer.body%></p>
      <br>
      <b>Answered <%= time_ago_in_words(answer.created_at)%> ago &nbspby&nbsp <strong style ="color:lightblue"><%=answer.user.email%></strong></b>
      <div> 
                       <%= link_to 'Destroy',[@question,answer], method: :delete, data: { confirm: 'Are you sure?' } %>
	  </div>
      <hr>
  
<% end %>

<%= link_to 'Write a Answer', new_question_answer_path(@question),class: "btn btn-danger"  %> 


